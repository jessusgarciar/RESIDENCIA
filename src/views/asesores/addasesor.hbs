<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">
      <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Agregar asesor</h5>
          <a href="/asesores" class="btn btn-outline-secondary btn-sm">Cancelar</a>
        </div>
        <div class="card-body">
          {{#if errorMessage}}
            <div class="alert alert-danger" role="alert">{{errorMessage}}</div>
          {{/if}}
          <form method="POST" action="/asesores">
            {{#if formColumns.length}}
              {{#each formColumns}}
                <div class="mb-3">
                  <label for="field-{{name}}" class="form-label">{{label}}{{#if required}} <span class="text-danger">*</span>{{/if}}</label>
                  {{#if isTextArea}}
                    <textarea class="form-control" id="field-{{name}}" name="{{name}}" rows="3" {{#if required}}required{{/if}} {{#if maxLength}}maxlength="{{maxLength}}"{{/if}}>{{lookup ../formData name}}</textarea>
                  {{else if options}}
                    <select
                      class="form-select"
                      id="field-{{name}}"
                      name="{{name}}"
                      {{#if required}}required{{/if}}
                    >
                      <option value="">Selecciona una opci√≥n</option>
                      {{#each options}}
                        <option value="{{this}}" {{#if (equals this (lookup ../../formData ../name))}}selected{{/if}}>{{this}}</option>
                      {{/each}}
                    </select>
                  {{else}}
                    <input type="{{inputType}}" class="form-control" id="field-{{name}}" name="{{name}}" value="{{lookup ../formData name}}" {{#if required}}required{{/if}} {{#if maxLength}}maxlength="{{maxLength}}"{{/if}} {{#if step}}step="{{step}}"{{/if}} />
                  {{/if}}
                </div>
              {{/each}}
            {{else}}
              <div class="alert alert-warning mb-0" role="alert">
                No se encontraron columnas configuradas para asesores. Verifica la base de datos.
              </div>
            {{/if}}
            <div class="d-flex justify-content-end gap-2">
              <button type="submit" class="btn btn-primary">Guardar asesor</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
